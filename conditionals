<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>

<head>
    <title>p5js Template</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.3/p5.js"></script>
    
    <script>

    var x; //x-coordinates
    var y; //y-coordinates
    var speed;
    var scale;
        function setup() {
            createCanvas(800,600);
            strokeWeight(0);
            fill('yellow');
            x = 400;
            y = 300;
            speed = 10;
            scale = 2;
            
            
        }

        function draw() {
            ellipse(x,y,30,30);
            
        }
        
        function keyPressed(){
            if(keyCode == LEFT_ARROW){
                x-=speed;
            }else if(keyCode == RIGHT_ARROW){
                x+=speed;
            }else if(keyCode == UP_ARROW){
                y-=speed;
            }else if(keyCode == DOWN_ARROW){
                y+=speed;
            }
            if(keyCode == 67){ //key 'c'
                fill(random(0,255),random(0,255),random(0,255)); //color
            }
            if(keyCode == 65){ //key 'a'
                clear(); 
                fill('yellow');
            }
            if(keyCode == 66){ //key 'b'
                ellipse(x,y,30*scale,30*scale); //dilation (making ellipse bigger)
            }
            
        }
    </script>
</head>
<body>
    <div id="code" class="container-fluid">
        <script src="https://gist-it.appspot.com/github/jenniferl4209/p5js/blob/gh-pages/conditionals.html?footer=0"></script>
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
    <script>
        $(window).bind("load", function() {
            $('#code').before($('#defaultCanvas0').remove());
        });
    </script>
</body>
</html>
